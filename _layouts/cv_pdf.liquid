---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div style="width: 100%; height: 100vh;">
      <iframe
        src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
        width="100%"
        height="100%"
        style="border: none;">
        <p>Your browser does not support iframes. You can 
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}">click here to download the PDF file.</a></p>
      </iframe>
    </div>
  </article>
</div> 